<?xml version="1.0" encoding="UTF-8"?>

<!-- Hot reloading of configuration file upon modification. Values of scanPeriod can be specified in units of milliseconds, seconds, minutes or hours -->
<configuration scan="true" scanPeriod="12 hours">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%logger{36}] [%thread] %msg%n</Pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>